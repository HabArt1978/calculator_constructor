{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "useTabs": false,
        "tabWidth": 2,
        "semi": false,
        "bracketSpacing": true,
        "printWidth": 80,
        "endOfLine": "auto",
        "arrowParens": "avoid"
      }
    ]
  }
}
